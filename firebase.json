{
  "hosting": {
    "public": "dist/slidecontent-angular",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/en/**",
        "destination": "/en/index.html"
      },
      {
        "source": "/pt/**",
        "destination": "/pt/index.html"
      },
      {
        "source": "/es/**",
        "destination": "/es/index.html"
      },
      {
        "source": "/ru/**",
        "destination": "/ru/index.html"
      },
      {
        "source": "/zh/**",
        "destination": "/zh/index.html"
      },
      {
        "source": "/fr/**",
        "destination": "/fr/index.html"
      }
    ],
    "redirects": [
      {
        "source": "/",
        "destination": "/pt",
        "type": 301
      }
    ]
  }
}
